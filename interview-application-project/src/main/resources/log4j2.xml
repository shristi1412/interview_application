<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="basePath">../interview-application-project/logs</Property>
    </Properties>
    
    <Appenders>
        <!-- Console Appender -->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{1} (%F:%L) - %m%n" />
        </Console>
        <!-- File Appender -->
        <File name="FILE" fileName="${basePath}/shopping_app.log" append="true">
        	<PatternLayout pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>    
    </Appenders>
    
    <Loggers>
        <Logger name="com.cg.interview-project" level="trace" />
        <Root level="error">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="FILE"></AppenderRef>
        </Root>
    </Loggers>
</Configuration>